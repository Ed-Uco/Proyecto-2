<h1>Marvel Movies</h1>

<h2>Click on the movie to check the information.</h2>

<div class="container">
  {{#each data}}

    <div class="row" style="width: 16rem;">
      <img src="{{this.image}}" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <a
          href="/movies/{{this._id}}"
          class="button w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-400 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >Information</a>
      </div>
    </div>

  {{/each}}
</div>

<div class="area-button">
  <a
    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-400 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
    href="/movies/create"
  >Create a Marvel Movie</a>
</div>