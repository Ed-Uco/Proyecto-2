<h1>Edit Marvel Movie</h1>

<div class="create-form">
  <form action="/movies/{{data._id}}/edit" method="POST">
    <label>Title</label>
    <input
      type="text"
      name="title"
      value="{{data.title}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />

    <label>Director</label>
    <input
      type="text"
      name="director"
      value="{{data.director}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />

    <label>Stars</label>
    <input
      type="text"
      name="stars"
      value="{{data.stars}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />

    <label>Image</label>
    <input
      type="text"
      name="image"
      value="{{data.image}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />

    <label>Year</label>
    <input
      type="text"
      name="year"
      value="{{data.year}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />

    <label>Description</label>
    <input
      type="text"
      name="description"
      value="{{data.description}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />

    <label>Trailer URL</label>
    <input
      type="text"
      name="movieUrl"
      value="{{data.movieUrl}}"
      class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
    />
    <br />
    <button
      class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-400 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      type="submit"
    >Save new changes</button>
  </form>
</div>